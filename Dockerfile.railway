FROM python:3.11-slim

WORKDIR /app

# Install minimal system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy backend files - use production requirements without Playwright
COPY backend/requirements.prod.txt backend/requirements.prod.txt
RUN pip install --no-cache-dir -r backend/requirements.prod.txt

# Skip Playwright installation for Railway deployment
# Screenshots will be disabled in production

# Copy the rest of the application
COPY backend/ backend/

WORKDIR /app/backend

# Port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD python -c "import requests; requests.get('http://localhost:8000/health')" || exit 1

# Start command with startup test
CMD ["sh", "-c", "python test_startup.py && uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000} --log-level info"]