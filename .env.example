# Application
APP_NAME="Growth Co-pilot"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=change-this-to-a-secure-random-string

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/growthcopilot

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API Keys (Required)
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_PAGESPEED_API_KEY=your-google-pagespeed-api-key-here

# Screenshot API (Urlbox)
URLBOX_API_KEY=your-urlbox-api-key-here
URLBOX_API_SECRET=your-urlbox-api-secret-here

# Optional API Keys
SCREENLY_API_KEY=
BUILTWITH_API_KEY=

# Monitoring (Optional)
SENTRY_DSN=

# CORS (Add your production domain)
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]